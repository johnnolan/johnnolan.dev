{
  "name": "johnnolan.dev",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:johnnolan/johnnolan.dev.git",
  "author": "John Nolan <me@johnnolan.dev>",
  "license": "MIT",
  "scripts": {
    "jshint": "jshint src/",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:spell": "cspell \"**/*.md\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules",
    "fix:markdown": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "lint:report": "eslint --ignore-path .gitignore --output-file eslint_report.json --format json .",
    "lint:all": "yarn run lint:check && yarn run lint:spell && yarn run lint:markdown",
    "sass": "sass --load-path=node_modules --style=compressed src/scss/main.scss src/_includes/css/main.css",
    "watch:sass": "sass --load-path=node_modules --style=compressed src/scss/main.scss src/_includes/css/main.css --watch",
    "watch:eleventy": "eleventy --serve --watch --incremental",
    "serve": "BASE_URL=/proxy/8080/ concurrently \"yarn run watch:eleventy\" \"yarn run watch:sass\"",
    "build": "yarn run sass && eleventy",
    "pa11y-ci": "pa11y-ci --config .pa11yci '_site/**/*.html'"
  },
  "dependencies": {
    "@11ty/eleventy": "3.1.2",
    "eleventy-plugin-youtube-embed": "1.13.0"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-inclusive-language": "1.0.3",
    "@11ty/eleventy-plugin-rss": "2.0.4",
    "@babel/core": "7.28.0",
    "@babel/eslint-parser": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "cheerio": "1.1.2",
    "concurrently": "9.2.0",
    "cspell": "9.2.0",
    "dayjs": "1.11.13",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globby": "14.1.0",
    "htmlencode": "0.0.4",
    "jshint": "2.13.6",
    "markdown-it": "14.1.0",
    "markdown-it-anchor": "9.2.0",
    "markdownlint-cli": "0.45.0",
    "pa11y-ci": "4.0.0",
    "prettier": "3.6.2",
    "sass": "1.90.0"
  }
}
