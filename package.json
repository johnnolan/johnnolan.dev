{
  "name": "johnnolan.dev",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:johnnolan/johnnolan.dev.git",
  "author": "John Nolan <me@johnnolan.dev>",
  "license": "MIT",
  "scripts": {
    "jshint": "jshint src/",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:spell": "cspell \"**/*.md\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules",
    "fix:markdown": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "lint:report": "eslint --ignore-path .gitignore --output-file eslint_report.json --format json .",
    "lint:all": "yarn run lint:check && yarn run lint:spell && yarn run lint:markdown",
    "sass": "sass --style=compressed src/scss/main.scss src/_includes/css/main.css",
    "watch:sass": "sass --style=compressed src/scss/main.scss src/_includes/css/main.css --watch",
    "watch:eleventy": "eleventy --serve --watch --incremental",
    "serve": "concurrently \"yarn run watch:eleventy\" \"yarn run watch:sass\"",
    "build": "yarn run sass && eleventy",
    "pa11y-ci": "pa11y-ci '_site/**/*.html'"
  },
  "dependencies": {
    "@11ty/eleventy": "2.0.1"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-inclusive-language": "1.0.3",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "@babel/core": "7.21.4",
    "@babel/eslint-parser": "7.21.3",
    "@babel/preset-env": "7.21.4",
    "concurrently": "8.0.1",
    "cspell": "6.31.1",
    "dayjs": "1.11.7",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "globby": "13.1.4",
    "jshint": "2.13.6",
    "markdown-it": "13.0.1",
    "markdownlint-cli": "0.33.0",
    "pa11y-ci": "3.0.1",
    "prettier": "2.8.8",
    "sass": "1.62.0"
  }
}
